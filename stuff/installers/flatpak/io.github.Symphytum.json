{
  "app-id": "io.github.Symphytum",
  "branch": "stable",
  "runtime": "org.kde.Platform",
  "sdk": "org.kde.Sdk",
  "runtime-version": "5.12",
  "command": "symphytum",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--device=dri",
    "--share=ipc",
    "--share=network",
    /* For QtSingleApplication */
    "--env=TMPDIR=/var/tmp",
    "--filesystem=host"
  ],
  "modules": [
  {
    "name": "symphytum",
    "buildsystem": "simple",
      "build-commands": [
        "tar xvzf symphytum*.tar.gz",
        "qmake -config release",
        "make",
        "install -D symphytum /app/bin/symphytum"
      ],
    "sources": [
      {
        "type": "file",
        "url": "https://github.com/giowck/symphytum/releases/download/v2.5/symphytum-2.5-src.tar.gz",
        "sha256": "521950fc2b19481a7e976c096c6e4f305e0975cc459d5753753991e784840a32"
      },
      {
        "type": "file",
        "path": "io.github.Symphytum.png"
      },
      {
        "type": "file",
        "path": "io.github.Symphytum.desktop"
        }
      ]
    }
  ]
}
